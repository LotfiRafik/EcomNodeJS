<%- include('header.ejs') -%>

    <h2>Supplier Creation:</h2>
    <div class="col-lg-4">
        <form action="/fournisseurs/insert" method="POST" id="form">
            <div class="form-group">
              <label for="exampleFormControlInput1">LastName</label>
              <input class="form-control" name="nom" id="exampleFormControlInput1" required >
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">FirstName</label>
                <input class="form-control" name="prenom" id="exampleFormControlInput1"  required>
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Address</label>
                <input class="form-control" name="adresse" id="exampleFormControlInput1"  required>
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Tel</label>
                <input type="number" class="form-control" name="tel" id="exampleFormControlInput1"  required>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Gender</label>
                <select class="form-control" id="exampleFormControlSelect1" name="sexe" required>
                  <option value='M'>Male</option>
                  <option value='F'>Female</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Create</button>
            <button class="btn btn-secondary mb-2" onclick="window.history.back()">Cancel</button>
        </form>
    </div>


<%- include('footer') -%>
