<%- include('header.ejs') -%>


<h2>Supplier list:</h2>

<a href="/fournisseurs/insert" class="btn btn-primary">Add supplier</a>

<br></br>

<table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">LastName</th>
        <th scope="col">FirstName</th>
        <th scope="col">Address</th>
        <th scope="col">Tel</th>
        <th scope="col">Gender</th>
        <th scope="col">Products</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
        <% data.fournisseurs.forEach(fournisseur=>{ %>
            <tr>
                <th scope="row"><%= fournisseur.id %></th>
                <td><%= fournisseur.nom%></td>
                <td><%= fournisseur.prenom%></td>
                <td><%= fournisseur.adresse%></td>
                <td><%= fournisseur.tel%></td>
                <td><%= fournisseur.sexe%></td>
                <td><a href="/products?fournisseurId=<%= fournisseur.id %>"" class="btn btn-info">Products</a></td>
                <td><a href="/fournisseurs/<%= fournisseur.id %>" class="btn btn-warning">Edit</a></td>
                <td><a href="/fournisseurs/<%= fournisseur.id %>/delete"" class="btn btn-danger">Delete</a></td>
              </tr>
        <% }) %>
    </tbody>
  </table>

<%- include('footer.ejs') -%>
